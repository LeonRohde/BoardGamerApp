<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="20dp"
        android:insetTop="10dp"
        android:insetRight="20dp"
        android:insetBottom="200dp"
        android:text="Boardgame App"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="20dp"
        android:insetTop="200dp"
        android:insetRight="20dp"
        android:insetBottom="10dp"
        android:text="NÃ¤chste Runde"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="20dp"
        android:insetTop="10dp"
        android:insetRight="20dp"
        android:insetBottom="10dp"
        android:text="Datum: "
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="20dp"
        android:insetTop="10dp"
        android:insetRight="20dp"
        android:insetBottom="10dp"
        android:text="Ort: "
        android:textSize="18sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/hostRotationButton"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:insetLeft="20dp"
        android:insetTop="10dp"
        android:insetRight="20dp"
        android:insetBottom="10dp"
        android:text="Host Rotation" />

    <Button
        android:id="@+id/gameSuggestionsActivityButton"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:insetLeft="20dp"
        android:insetTop="10dp"
        android:insetRight="20dp"
        android:insetBottom="10dp"
        android:text="Game Suggestions" />

    <Button
        android:id="@+id/gameVotingActivityButton"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:insetLeft="20dp"
        android:insetTop="10dp"
        android:insetRight="20dp"
        android:insetBottom="10dp"
        android:text="Game Voting" />

    <Button
        android:id="@+id/feedbackActivityButton"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:insetLeft="20dp"
        android:insetTop="10dp"
        android:insetRight="20dp"
        android:insetBottom="10dp"
        android:text="Feedback" />
</LinearLayout>
