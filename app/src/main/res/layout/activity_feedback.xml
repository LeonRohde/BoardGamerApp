<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FeedbackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wähle den Gastgeber!"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spielerSpinner"
        android:layout_width="389dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Bewertung für:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bewerte den/die Gastgeber:in:" />

    <RatingBar
        android:id="@+id/hostRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:layout_marginBottom="16dp"
        android:contentDescription="Gastgeber"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bewerte das Essen:" />
    <RatingBar
        android:id="@+id/foodRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:layout_marginBottom="16dp"
        android:contentDescription="Essen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bewerte den Spieleabend:" />
    <RatingBar
        android:id="@+id/eveningRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:layout_marginBottom="16dp"
        android:text="Spielabend"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absenden"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/averageRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Durchschnittliche Bewertung"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
